<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/stylesheet.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/upload.css">
    <script type="text/javascript">
        window.onload = function() {
            const uploadInput = document.getElementById("uploadInputField");
            uploadInput.addEventListener("change", () => {
                if (uploadInput.files[0].size > 10485760) {
                    alert ("This file is too large!");
                    uploadInput.value = "";
                }
            })
        }
    </script>
    <title><%- title %></title>
</head>
<body>
    <%- include("partials/navbar") %>
    <main>
        <form action="/upload" enctype="multipart/form-data" method="POST" class="uploadForm">
            <div class="uploadFormItem">
                File:
                <input type="file" class="uploadedFile" name="uploadedFile" accept="image/*" id="uploadInputField" required>
                <p>(maximum file size: 10 MB)</p>
            </div>
            <div class="uploadFormItem">
                <label for="fileDescription">Description:</label>
                <textarea name="fileDescription" id="fileDescription"></textarea>
            </div>
            <button class="uploadFormSubmitButton">Upload</button>
        </form>
    </main>
</body>
</html>